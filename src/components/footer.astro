---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image-old.astro";
import HeroImage1 from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";
import type { NavItem } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "#",
    description: "KHCS on instagram",
    icon: "fa-brands:instagram",
  },

  {
    url: "#",
    description: "KHCS on facebook",
    icon: "fa-brands:facebook",
  },
];
---

<!-- <footer class="footer relative flex h-64 items-center justify-center"> -->
<footer class="footer">
  <ul class="relative grid grid-cols-2 gap-4">
    {
      links.map((link) => (
        <li>
          <a
            class="color-main flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>

<style>
  .footer {
    @apply absolute bottom-10 right-0 flex items-center justify-center;
    @apply z-50; /* Increase z-index */
  }
</style>
